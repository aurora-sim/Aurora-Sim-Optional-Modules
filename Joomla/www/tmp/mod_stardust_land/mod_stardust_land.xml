<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.1">
    <!-- Name of the Module -->
	<name>Aurora - Stardust Land</name> 
 
    <!-- Name of the Author -->
	<author>Skidz Tweak</author> 
 
    <!-- Version Date of the Module -->
	<creationDate>2011-10-16</creationDate> 
 
    <!-- Copyright information -->
	<copyright>All rights reserved by New Worldz LLC</copyright> 
 
    <!-- License Information -->
	<license>GPL 2.0</license> 
 
    <!-- Author's email address -->
	<authorEmail>Robert.Skidmore@NewWorldz.com</authorEmail> 
 
    <!-- Author's website -->
	<authorUrl>www.NewWorldz.com</authorUrl> 
 
    <!-- Module version number -->
	<version>1.5.1</version> 
 
    <!-- Description of what the module does -->
	<description>Stardust purchase region module</description>
 
    <!-- Listing of all files that should be installed for the module to function -->
	<files>
        <!-- The "module" attribute signifies that this is the main controller file -->
		<filename module="mod_stardust_land">mod_stardust_land.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<languages>
        <!-- Any language files included with the module -->
        <language tag="en-GB">en-GB.mod_stardust_land.ini</language>
    </languages>
 
    <!-- Optional parameters -->
	<params>
        <!-- parameter to allow placement of a module class suffix for the module table / xhtml display -->
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
 
        <!-- just gives us a little room between the previous parameter and the next -->
		<param name="@spacer" type="spacer" default="" label="" description="" />
		
		<param name="tos" type="textarea" default="" label="TOS" description="" rows="10" cols="5" />
		
		<param name="AmountAdditionPerfectage" type="text" default="2.91%" label="ADDITION PERCENTAGE" description="The additional percentage you charge. This does not actually effect anything, just tells the user in the FAQ." />
		<param name="STARDUST_SERVICE_URL" type="text" default="http://10.19.44.9:8007/StarDustWebUI" label="STARDUST_SERVICE_URL" description="" />
		<param name="PAYPAL_URL" type="text" default="www.sandbox.paypal.com" label="PAYPAL_URL" description="" />
		<param name="NOTIFY_URL" type="text" default="http://GayNations.org/index.php?option=com_content&amp;view=article&amp;id=92&amp;Itemid=122" label="NOTIFY_URL" description="Should be pointed to the page you made for stardust purchase currency page" />
		<param name="PAYPAL_ACCOUNT" type="text" default="robert.skidmore@gmail.com" label="PAYPAL_ACCOUNT" description="" />
		<param name="RETURN_URL" type="text" default="http://GayNations.org/index.php?option=com_content&amp;view=article&amp;id=92&amp;Itemid=122" label="RETURN_URL" description="Should be pointed to the page you made for stardust purchase currency page" />
		<param name="NOTIFICATION_EMAIL" type="text" default="someone@somwhere.com" label="NOTIFICATION_EMAIL" description="" />
		<param name="DO_NOTIFICATION" type="radio" default="0" label="DO_NOTIFICATION" description="">
		  <option value="1">Yes</option>
		  <option value="0">No</option>
		</param>
    </params>
</install>